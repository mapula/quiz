<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathsimage4"
    tools:context="com.example.admin.quiz.maths">

    <LinearLayout
        android:id="@+id/activity_maths"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="com.example.admin.quiz.maths">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.What is the answer for (3+4)+2+(-9)?"
            android:textSize="20sp"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoDIVIDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="65" />


            <RadioButton
                android:id="@+id/rdoAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0" />

            <RadioButton
                android:id="@+id/rdoSUBTRACT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29" />

            <RadioButton
                android:id="@+id/rdoMULTIPLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.What is the answer for 12+16+(-9)+2?"
            android:textSize="20sp"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoDIVIDE1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21" />


            <RadioButton
                android:id="@+id/rdoAdd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-20" />

            <RadioButton
                android:id="@+id/rdoSUBTRACT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33" />

            <RadioButton
                android:id="@+id/rdoMULTIPLY1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="39" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.What is the answer for 37-23+4 ?"
            android:textSize="20sp"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20" />


            <RadioButton
                android:id="@+id/rdoEVEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9" />

            <RadioButton
                android:id="@+id/rdo0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10" />

            <RadioButton
                android:id="@+id/rdoODD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.What is the answer for 24+12-11?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdo21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27" />


            <RadioButton
                android:id="@+id/rdoEVEN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="79" />

            <RadioButton
                android:id="@+id/rdo01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25" />

            <RadioButton
                android:id="@+id/rdoODD1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="56" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.What is the answer for (12*3)+ 12?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radg5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoFRACTION1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="36" />


            <RadioButton
                android:id="@+id/rdoFRACTION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-48" />

            <RadioButton
                android:id="@+id/rdoDECIMAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="48" />

            <RadioButton
                android:id="@+id/rdoEVEN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="84" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/score_text_view"
                android:layout_height="wrap_content"
                android:text="SCORE :"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Percentage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Percentage2"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="Submit"
            android:text="SUBMIT"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
