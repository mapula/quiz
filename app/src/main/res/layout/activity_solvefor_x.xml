<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathsimage4"
    tools:context="com.example.admin.quiz.solveforX">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_solvefor_x"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.admin.quiz.solveforX">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Calculate the value of X.... 2X + 2 + X = 0?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radio_g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoANSWER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-2/3"

                />


            <RadioButton
                android:id="@+id/rdoANSWER1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2X" />

            <RadioButton
                android:id="@+id/rdoANSWER2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.3" />

            <RadioButton
                android:id="@+id/rdoANSWER3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2X" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.Calculate the value of X..... 2X + 9 = 25?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radio_g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoVALUE1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
             />

            <RadioButton
                android:id="@+id/rdoVALUE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7" />


            <RadioButton
                android:id="@+id/rdoVALUE2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3" />

            <RadioButton
                android:id="@+id/rdoVALUE3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Calculate value of X....√(x/2) = 3 ?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radio_g3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2" />


            <RadioButton
                android:id="@+id/rdoEVEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="√(x/2)" />

            <RadioButton
                android:id="@+id/rdo0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18"
                />

            <RadioButton
                android:id="@+id/rdoODD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.Calculate the value of X.... 5x + 2 = -8?"
            android:textSize="20sp"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radio_g4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdo21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-2"
              />


            <RadioButton
                android:id="@+id/rdoEVEN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.2" />

            <RadioButton
                android:id="@+id/rdo01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2" />

            <RadioButton
                android:id="@+id/rdoODD1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" -1.2" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. What is the value of X....3x - 7 = 26?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/radio_g5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoFRACTION1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-11" />


            <RadioButton
                android:id="@+id/rdoFRACTION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
             />

            <RadioButton
                android:id="@+id/rdoDECIMAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="61/3" />

            <RadioButton
                android:id="@+id/rdoEVEN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-6/3" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/score_text_view"
            android:layout_height="wrap_content"
            android:text="SCORE :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/percentage"
                android:text="Percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"/>


        </LinearLayout>

        <Button
            android:id="@+id/sub_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="SUBMIT"
            android:textColor="#000000"
            android:onClick="onClick"/>

    </LinearLayout>
</ScrollView>


