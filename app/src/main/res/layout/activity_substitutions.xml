<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathsimage4"
    tools:context="com.example.admin.quiz.substitutions">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_substitutions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.quiz.substitutions">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.What is the value if x = 2, 2X + 2 + X = 0?"
        android:textSize="20sp"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdoANSWER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />


        <RadioButton
            android:id="@+id/rdoANSWER1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9" />

        <RadioButton
            android:id="@+id/rdoANSWER2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8" />

        <RadioButton
            android:id="@+id/rdoANSWER3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-8" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.What is the value if  x = 3, 2X + 9 = 25?"
        android:textSize="20sp"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdoVALUE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17" />


        <RadioButton
            android:id="@+id/rdoVALUE1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-12" />

        <RadioButton
            android:id="@+id/rdoVALUE2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-10" />

        <RadioButton
            android:id="@+id/rdoVALUE3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.Find the value if x = 5, 3x - 6 = 7 ?"
        android:textSize="20sp"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11" />


        <RadioButton
            android:id="@+id/rdo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/rdo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3" />

        <RadioButton
            android:id="@+id/rdo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-2" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.What is the value if x = -1.... 5x + 2 = -8?"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <RadioGroup
        android:id="@+id/rg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdo01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7" />


        <RadioButton
            android:id="@+id/rdo02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5" />

        <RadioButton
            android:id="@+id/rdo03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9" />

        <RadioButton
            android:id="@+id/rdo04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.What is the value if x = -2, 3x - 7 = 26?"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <RadioGroup
        android:id="@+id/rg5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdoFRACTION1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="35" />


        <RadioButton
            android:id="@+id/rdoFRACTION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32" />

        <RadioButton
            android:id="@+id/rdoDECIMAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-39" />

        <RadioButton
            android:id="@+id/rdoEVEN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="37" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/Score_text_view"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_weight="1"/>

        <TextView
            android:id="@+id/Percentage1"
            android:text="Percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="SUBMIT"
        android:textColor="#000000"
        android:onClick="Submit"/>

</LinearLayout>
    </ScrollView>

